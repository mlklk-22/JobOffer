@model JobOffer.Models.Useraccounth;
@{
    Layout = "~/Views/Shared/_DashboardAdminLayout.cshtml";
    var UserId = ViewBag.UserId;
    var FullName = ViewBag.FullName;
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('~/Assests/images/hero_1.jpg');margin-left:244px" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">My Profile</h1>
                <div class="custom-breadcrumbs">

                    <span style="font-size:20px;font-weight:bold; color:#89ba16"> My Profile</></span> <strong>/</strong>
                    <span style="font-size:20px;font-weight:bold; color:#89ba16"> Account Setting</></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 my-5">
    <div class="container">


        <div class="profile" style="width:700px;margin-left:400px;">
            <div class="profile-tab-nav">
                <div class="p-4">
                    <div class="img-circle text-center mb-3">
                        <img src="~/PersonalImages/@Model.Imagepath" alt="Image" style="  border-radius: 50%; height:150px;width:150px">
                    </div>
                    <h3 class="text-center" style="font-weight:bold">@FullName</h3>
                </div>
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                </div>
            </div>

            <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">

                <div class="tab-pane fade show active" id="account" role="tabpanel" aria-labelledby="account-tab">

                    <form method="post">
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input type="text" disabled="true" asp-for="Fullname" value="@Model.Fullname" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>User Name</label>
                                    <input type="text" disabled="true" asp-for="Username" value="@Model.Username" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" disabled="true" asp-for="Email" value="@Model.Email" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Phone number</label>
                                    <input type="text" disabled="true" asp-for="Phonenumber" value="@Model.Phonenumber" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Company</label>
                                    <input type="text" disabled="true" asp-for="Industialname" value="@Model.Industialname" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" disabled="true" asp-for="Password" value="@Model.Password" class="form-control" id="pass">
                                    <input type="checkbox" onclick="myFunction()">Show Password
                                </div>
                            </div>
                           
                        </div>
                       @* <div>
                            <button class="btn btn-primary" asp-action="EditMyProfile" asp-controller="Admin" asp-route-UserId="@Model.Userid">Update</button> |
                            <button class="btn btn-light" asp-action="Home" asp-controller="ActualUser">Cancel</button>
                        </div>*@
                    </form>
                </div>
                
            </div>

        </div>

    </div>
</section>


