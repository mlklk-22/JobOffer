@model IEnumerable<JobOffer.Models.Useraccounth>

@{
    Layout = "~/Views/Shared/_DashboardAdminLayout.cshtml";
}


<div class="page-header" style="margin-left:250px;margin-top:30px">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h5 class="m-b-10" style="font-size:20px;font-weight:bold; color:#89ba16">Manage User</h5>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Admin"><i class="feather icon-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="#!">Manage User</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<a asp-action="CreateUser">

    <button type="button"
            class="btn btn-outline-success" style="margin-left:250px">
        Create New
    </button>



</a>
<div style="width:350px">
<table class="table is-bordered" style="margin-top:20px;margin-left:250px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phonenumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Industialname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phonenumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industialname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
              <img src="@Url.Content("~/PersonalImages/" + @item.Imagepath)" width="100" height="100" />
                   
            <td>
                @Html.DisplayFor(modelItem => item.Role.Rolename)
            </td>
            <td>
                    <a asp-action="EditUser" asp-route-id="@item.Userid">Edit</a> |
                    <a asp-action="DetailsUser" asp-route-id="@item.Userid">Details</a> |
                    <a asp-action="DeleteUser" asp-route-id="@item.Userid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>



