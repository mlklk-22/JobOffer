@model IEnumerable<JobOffer.Models.Applyjob>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardAdminLayout.cshtml";
}

<h1>Index</h1>

<div class="page-header" style="margin-left:250px;margin-top:30px">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h5 class="m-b-10" style="font-size:20px;font-weight:bold; color:#89ba16">Manage Apply Job</h5>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Admin"><i class="feather icon-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="#!">Manage Apply Job</a></li>


                </ul>
            </div>
        </div>
    </div>
</div>

<a asp-action="CreateApplyJob">
    <button type="button"
            class="btn btn-outline-success" style="margin-left:250px">
        Create New
    </button>


</a>

<div style="width:50px;margin-left:250px">

    <table class="table is-bordered" style="margin-top:20px">
        <thead>
            <tr>
                <th>
                    Job Type
                </th>
                <th>
                    Job
                </th>
                <th>
                    User
                </th>
                <th>
                    Industrial
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Job.Jobtype)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Job.Jobname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Industialname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Email)
                    <td>
                        <a asp-action="EditApplyJob" asp-route-id="@item.Applyid">Edit</a> |
                        <a asp-action="DetailsApplyJob" asp-route-id="@item.Applyid">Details</a> |
                        <a asp-action="DeleteApplyJob" asp-route-id="@item.Applyid">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
