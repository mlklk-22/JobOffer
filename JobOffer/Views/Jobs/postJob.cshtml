@model JobOffer.Models.Jobh

@{
    Layout = "~/Views/Shared/_ActualUserLayout.cshtml";
}
<!-- HOME -->
    <section class="section-hero overlay inner-page bg-image" style="background-image: url('../Assests/images/hero_1.jpg');" id="home-section">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <h1 class="text-white font-weight-bold">Post A Job</h1>
            <div class="custom-breadcrumbs">
              <a  asp-action="Home" asp-controller="ActualUser">Home</a> <span class="mx-2 slash">/</span>
              <span class="text-white"><strong>Post a Job</strong></span>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="site-section">
      <div class="container">

        <div class="row align-items-center mb-5">
          <div class="col-lg-8 mb-4 mb-lg-0">
            <div class="d-flex align-items-center">
              <div>
                  <h2 style="margin-left:450px">Post A Job</h2>
              </div>
            </div>
          </div>
        </div>

        <div class="row mb-5">
          <div class="col-lg-12">
                <form asp-action="postJob" asp-controller="Jobs" class="p-4 p-md-5 border rounded" enctype="multipart/form-data" method="post" style="width:800px;margin-left:120px">
                    <h3 class="text-black mb-5 border-bottom pb-2" >Job Details</h3>

              <div class="form-group">
                        <label asp-for="Jobname" >Job Title</label>
                        <input asp-for="Jobname" type="text" class="form-control" id="job-title" placeholder="Product Designer">
              </div>
              <div class="form-group">
                <label asp-for="Addressid"> Location</label>
                        <select asp-for="Addressid" asp-items="ViewBag.AddressCity" class="selectpicker border rounded" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Location">
                            
                        </select>
              </div>

              <div class="form-group">
                <label asp-for="Addressid">Job Region</label>
                        <select asp-for="Addressid" asp-items="ViewBag.AddressName" class="selectpicker border rounded" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Region">
                     
                    </select>
              </div>

              <div class="form-group">
                <label for="job-type">Job Type</label>
                <select asp-for="Jobtype" class="selectpicker border rounded" id="job-type" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Job Type">
                  <option>Part Time</option>
                  <option>Full Time</option>
                </select>
              </div>

                    <div class="form-group">
                        <label asp-for="Jobsalary">Job Offer Salary</label>
                        <input asp-for=Jobsalary type="number" class="form-control" id="job-location" placeholder="5000-7000">
                    </div>

              <div class="form-group">
                <label for="job-location">Company Name</label>
                <input type="text" class="form-control" id="job-location" placeholder="e.g. New York">
              </div>

              <div class="form-group">
                <label asp-for="Jobdescription">Job Description</label>
                <div >
                  <textarea asp-for="Jobdescription"></textarea>  
                </div>
              </div>

              <div class="form-group">
                        <div class="col-md-3 mb-3" style="width:300px">
                            <label asp-for="ImageFile" class="control-label"></label>
                            <input asp-for="ImageFile" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                  <input type="submit" value="Save Job" asp-action="postJob" asp-controller="jobs" class="btn btn-block btn-primary btn-md" style="width:150px;margin-left:290px" />    
              </div>

            </form>
          </div>
        </div>
      </div>
    </section>