  <section class="site-section">
       <div class="di">
            <form method="post" class="search-jobs-form" asp-action="Search" asp-controller="ActualUser">
                <div class="row mb-5">



                    <div class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                        <input type="text" class="form-control form-control-lg" name="job" style="width:480px" placeholder="Job title, Company...">
                    </div>


                    <div class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                        <button type="submit" class="btn btn-primary btn-lg btn-block text-white btn-search" style="width:180px;margin-left:150px" ><span class="icon-search icon mr-2"></span>Search Job</button>
                    </div>
                </div>
            </form>
           </div>
    
      <div class="container">

        <div class="row mb-5 justify-content-center">
          <div class="col-md-7 text-center">
                        <h2 class="section-title mb-2">@NumberOfJob Job Listed</h2>
          </div>
        </div>
        
        <ul class="job-listings mb-5">
             @foreach (var item in Model)
        {
          <li class="job-listing d-block d-sm-flex pb-3 pb-sm-0 align-items-center">
                            <a asp-controller="Jobs" asp-action="ApplyJob" asp-route-Jobid=@item.Job.Jobid></a>
            <div class="job-listing-logo">
                                <img src="@Url.Content("~/JobsImages/" + @item.Job.Jobimage)" width="100" height="100" />
            </div>

            <div class="job-listing-about d-sm-flex custom-width w-100 justify-content-between mx-4">
              <div class="job-listing-position custom-width w-50 mb-3 mb-sm-0">
                <h2>@item.Job.Jobname</h2>
                                    <strong>@item.Account.Industialname</strong>
              </div>
              <div class="job-listing-location mb-3 mb-sm-0 custom-width w-25">
                <span class="icon-room"></span> @item.Address.Addresscity, @item.Address.Addressname
              </div>
              <div class="job-listing-meta">
                <span class="badge badge-danger">@item.Job.Jobtype</span>
              </div>
            </div>
            
          </li>
         
          }
        </ul>

        <div class="row pagination-wrap">
          <div class="col-md-6 text-center text-md-left mb-4 mb-md-0">
           
