@model JobOffer.Models.Useraccounth;
@{
	Layout = "~/Views/Shared/_ActualUserLayout.cshtml";
	var UserId = ViewBag.UserId;
	var FullName = ViewBag.FullName;
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('../Assests/images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">My Profile</h1>
                <div class="custom-breadcrumbs">
					<a asp-action="Home" asp-controller="ActualUser">Home</a><span class="mx-2 slash">/</span>
					<span class="text-white"><strong>My Profile</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

	  <section class="py-5 my-5">
	        <div class="container" style="height:200px">
                     <div class="myp">



		
					<div class="p-4">
						<div class="img-circle text-center mb-3">
						<img src="~/PersonalImages/@Model.Imagepath" alt="Image" class="shadow" style="  border-radius: 50%; height:150px;width:150px">
						</div>
					<h4 class="text-center" style="font-weight:bold;margin-left:4px">@FullName</h4>
					</div>
					


				
				<div class="tab-content p-4 p-md-5" id="v-pills-tabContent" style="margin-top:60px" >
					
					<div class="tab-pane fade show active" id="account" role="tabpanel" aria-labelledby="account-tab">

					<form method="post" enctype="multipart/form-data" asp-action="EditMyProfile">
							<div class="row">
							
							<div class="col-md-6">
								<div class="form-group">
									<label>Full Name</label>
									<input type="text" asp-for="Fullname"  value="@Model.Fullname" class="form-control">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>User Name</label>
									<input type="text" asp-for="Username" value="@Model.Username" class="form-control">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Email</label>
									<input type="text" asp-for="Email" value="@Model.Email" class="form-control">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Phone number</label>
									<input type="text" asp-for="Phonenumber" value="@Model.Phonenumber" class="form-control">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Company</label>
									<input type="text" asp-for="Industialname" value="@Model.Industialname" class="form-control">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Password</label>
									<input type="password" asp-for="Password" value="@Model.Password" class="form-control" id="password">
									<input type="checkbox" onclick="myFunction()">Show Password
									
								</div>
								
									<label asp-for="ImageFile" class="control-label">My Image</label>
									<input asp-for="ImageFile" class="form-control" />
									<span asp-validation-for="ImageFile" class="text-danger"></span>
								

							

							</div>
						
						
						</div>
						<div>
							<button class="btn btn-primary" asp-action="EditMyProfile" asp-controller="ActualUser" asp-route-UserId="@Model.Userid">Update</button>
							<button class="btn btn-light" asp-action="Home" asp-controller="ActualUser">Cancel </button>
						</div>


						</form>
						</div>
					</div>
		</div>
	</div>




</section>
<br />

