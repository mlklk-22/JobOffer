<!DOCTYPE html>
<html lang="en">
@{
    var UserName = ViewBag.AdminUser;
    var PersonalImage = ViewBag.PImage;
}
<head>


    

    <title>Admin</title>
    <!-- HTML5 Shim and Respond.js IE11 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
   
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
   
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="Phoenixcoded" />
    <!-- Favicon icon -->
    @*<link rel="icon" href="~/DashboardAssest/images/widget/flogoJob.png" type="image/x-icon">*@

    <!-- vendor css -->
    <link rel="stylesheet" href="~/DashboardAssest/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">



</head>
<body class="">
    <!-- [ Pre-loader ] start -->
    <div class="loader-bg">
        <div class="loader-track">
            <div class="loader-fill"></div>
        </div>
    </div>
    <!-- [ Pre-loader ] End -->
    <!-- [ navigation menu ] start -->
    <nav class="pcoded-navbar navbar-collapsed">
        <div class="navbar-wrapper">
            <div class="navbar-content scroll-div ps ">

                <div class="">
                    <div class="main-menu-header">
                        <img class="img-radius" src="@Url.Content("~/PersonalImages/" + ViewBag.PImage)" width="100" height="100" />

                        <div class="user-details">
                            <span>@UserName</span>
                            <div id="more-details">Profile<i class="fa fa-chevron-down m-l-5"></i></div>
                        </div>
                    </div>
                    <div class="collapse" id="nav-user-link">
                        <ul class="list-unstyled">
                            <li class="list-group-item"><a asp-action="MyProfile" asp-controller="Admin"><i class="feather icon-user m-r-5"></i>View Profile</a></li>
                            <li class="list-group-item"><a asp-action="logOut" asp-controller="Auth"><i class="feather icon-log-out m-r-5"></i>Logout</a></li>
                        </ul>
                    </div>
                </div>


                <ul class="nav pcoded-inner-navbar ">
                    <li class="nav-item pcoded-menu-caption">
                        <label>Navigation</label>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Dashboard" asp-controller="Admin" class="nav-link "><span class="pcoded-micon"><i class="feather icon-home"></i></span><span class="pcoded-mtext">Dashboard</span></a>
                    </li>
                     <li class="nav-item">
                        <a asp-action="MainUser" asp-controller="Admin" class="nav-link "><span class="pcoded-micon"><i class="feather icon-user"></i></span><span class="pcoded-mtext">Manage Users</span></a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="MainAddress" asp-controller="Admin" class="nav-link "><span class="pcoded-micon"><i class="feather icon-layout"></i></span><span class="pcoded-mtext">Manage Address</span></a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="MainApplyJob" asp-controller="Admin" class="nav-link "><span class="pcoded-micon"><i class="feather icon-layout"></i></span><span class="pcoded-mtext">Manage Apply Job</span></a>
                    </li>
                    <li class="nav-item pcoded-hasmenu">
                        <a > <span class="pcoded-micon"><i class="feather icon-layout"></i></span><span class="pcoded-mtext">Manage Jobs</span></a>
                        <ul class="pcoded-submenu">
                            <li><a asp-action="MainJobs"  asp-controller="Admin" >Manage Jobs</a></li>
                            <li><a asp-controller="Admin" asp-action="ManagePendingJobs">Pending Jobs</a></li>
                            <li><a asp-controller="Admin" asp-action="ManageRejectingJobs">Rejecting Jobs</a></li>
                        </ul>
                    </li>
                    <li class="nav-item pcoded-hasmenu">
                        <a> <span class="pcoded-micon"><i class="feather icon-layout"></i></span><span class="pcoded-mtext">Manage Testmonials</span></a>
                        <ul class="pcoded-submenu">
                            <li><a  asp-action="MainTestmonials"           asp-controller="Admin">Manage Testmonials</a></li>
                            <li><a asp-action="ManagePendingTestmonial" asp-controller="Admin">Pending Testmonials</a></li>
                            <li><a asp-action="ManageRejectingTestmonial" asp-controller="Admin">Rejecting Testmonials</a></li>
                        </ul>
                    </li>
          
</ul>
            </div>
        </div>
    </nav>
    
    <header class="navbar pcoded-header navbar-expand-lg navbar-light header-dark">


        <div class="m-header">
            <a class="mobile-menu" id="mobile-collapse" href="#!"><span></span></a>
            <h3 style="color:ghostwhite ; font-family:'Times New Roman', Times, serif;font-size:30px">Admin</h3>
            
            <a href="#!" class="mob-toggler">
                <i class="feather icon-more-vertical"></i>
            </a>
        </div>
     

    </header>
    <!-- [ Header ] end -->
    <div>
        @RenderBody()
    </div>
 
    <!-- Required Js -->
    <script src="~/DashboardAssest/js/vendor-all.min.js"></script>
    <script src="~/DashboardAssest/js/plugins/bootstrap.min.js"></script>
    <script src="~/DashboardAssest/js/pcoded.min.js"></script>

    <!-- Apex Chart -->
    <script src="~/DashboardAssest/js/plugins/apexcharts.min.js"></script>


    <!-- custom-chart js -->
    <script src="~/DashboardAssest/js/pages/dashboard-main.js"></script>

    <script>
        function myFunction() {
            var x = document.getElementById("pass");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>

</body>

</html>

    